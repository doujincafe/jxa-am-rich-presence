{
  "name": "jxa-apple-music",
  "version": "1.0.0",
  "description": "JXA powered rich presence for Apple Music on Mac",
  "main": "./src/Main.ts",
  "bin": {
    "jxa-am": "./dist/jxa-am-drp.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fumiichan/jxa-am-rich-presence.git"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist && tsc -p ./tsconfig.json",
    "build": "esbuild ./dist/Main.js --bundle --platform=node --outfile=./dist/jxa-am-drp.js && pkg --no-bytecode --public .",
    "postbuild": "rm -rf ./dist"
  },
  "author": "Aiko Fujimoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fumiichan/jxa-am-rich-presence/issues"
  },
  "homepage": "https://github.com/fumiichan/jxa-am-rich-presence#readme",
  "devDependencies": {
    "@jxa/global-type": "^1.3.6",
    "@jxa/types": "^1.3.6",
    "@types/cli-color": "^2.0.2",
    "@types/discord-rpc": "^4.0.4",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.2.5",
    "esbuild": "^0.17.19",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@jxa/run": "^1.3.6",
    "cli-color": "^2.0.3",
    "discord-rpc": "^4.0.1",
    "luxon": "^3.3.0"
  },
  "private": true,
  "pkg": {
    "scripts": "./dist/jxa-am-drp.js",
    "targets": [
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "./build/"
  }
}
